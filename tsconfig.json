{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["nativewind/types", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    "metro.config.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js"]
}
